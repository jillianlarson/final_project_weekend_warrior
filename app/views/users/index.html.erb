<div class="page-header">
  <h1>
    Users
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Address</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><a href="/users/<%= user.id %>" class="btn btn-search"><i class ="fa fa-user fa-2x"></i>
         <%= user.username %></a></td>
        <td>
          <%= user.email %>
        <td>
          <%= user.address %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
