<div class="page-header">
  <h3><%= @user.username %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Address</dt>
      <dd><%= @user.address %></dd>
    </dl>
  </div>
</div>
<div class="btn-group btn-group-justified">
  <a href="/users/<%= @user.id %>" class="btn btn-primary">
    Back
  </a>
</div>
<p>
</p>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Roadtrip Destination</th>
        <th>Map</th>
      </tr>

<% @user.favorites.each do |favorite| %>
      <tr>
        <td><a href="/location/<%= favorite.location_id %>"><%= favorite.location.name %></a></td>

        <td>
     <iframe
       width="360"
       height="200"
       frameborder="0" style="border:0"
       src="<%= "https://www.google.com/maps/embed/v1/directions?key=AIzaSyBmNIvK7VCLkqNtDsQy7oOeuSXiMDZD9-4&origin="+@origin+"&destination="+URI.encode(favorite.location.address) %>" allowfullscreen>
     </iframe>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>





