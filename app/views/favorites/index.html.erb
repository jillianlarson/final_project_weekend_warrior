<div class="page-header">
  <h1>
    Favorites
    <a href="/locations" class="btn btn-lg btn-danger">View All Locations</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Location</th>
        <th></th>
      </tr>

      <% @favorites.each do |favorite| %>
      <tr>
        <td><a href="/users/<%= favorite.user_id %>" class="btn btn-success"><i class="fa fa-user fa-2x"></i> <%= favorite.user.username %></a></td>
        <td><a href="/locations/<%= favorite.location_id %>" class="btn btn-warning"> <i class="fa fa-search-plus fa-2x"></i> <%= favorite.location.name %></a></td>
        <td>
          <a href="/delete_favorite/<%= favorite.id %>"><i class="fa fa-trash-o fa-2x"></i> <rel="nofollow"></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
